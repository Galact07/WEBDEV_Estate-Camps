<% layout('/layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items my-3">
  <div class="row">
    <div class="col-6">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
          alt=""
          class="card-img-top"
        />
      </div>
    </div>
    <div class="col-6">
      <div class="card shadow">
        <div class="card-body">
          <h5 class="card-title text-center">New CampGround</h5>
          <form
            action="/campgrounds"
            method="POST"
            novalidate
            class="validate-form"
            enctype="multipart/form-data"
          >
            <div>
              <label class="col-form-label" for="title"> Title</label>
              <input class="form-control" type="text" name="title" required />
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div>
              <label class="col-form-label" id="location" for="location"
                >Location</label
              >
              <input
                class="form-control"
                type="text"
                name="location"
                required
              />
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div>
              <div class="mb-3 custom-file">
                <label for="image" class="form-label">
                  <span class="form-label custom-file-label">Choose Image</span>
                </label>
                <input
                  class="form-control"
                  type="file"
                  id="image"
                  name="image"
                  multiple
                />
              </div>
            </div>
            <!-- <div>
        <label class="col-form-label" for="image">Image Url</label>
        in
        <input class="form-control" type="text" id="image"  name="image" required/>
        <div class="valid-feedback">
          Looks Good
        </div>
      </div> -->
            <div>
              <label class="col-form-label" for="price">Price</label>
              <input
                class="form-control"
                type="number"
                id="price"
                name="price"
                required
              />
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div>
              <label class="col-form-label" for="description"
                >Description</label
              >
              <textarea
                name="description"
                id="description"
                class="form-control"
                cols="30"
                rows="5"
                required
              ></textarea>
              <div class="valid-feedback">Looks Good</div>
              <!-- <input class="form-control" type="text" id="description"  name="description" /> -->
            </div>

            <button class="btn btn-success my-3">Save</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
